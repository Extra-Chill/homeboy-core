{
  "id": "wordpress",
  "name": "WordPress",
  "version": "0.1.0",
  "icon": "w.square",
  "description": "WordPress platform support with WP-CLI integration",
  "author": "Homeboy",
  "configSchema": "wordpress",
  "defaultPinnedFiles": ["wp-config.php"],
  "defaultPinnedLogs": ["logs/error.log", "logs/debug.log"],
  "database": {
    "cli": {
      "tablesCommand": "cd {{sitePath}} && {{cliPath}} db tables --format=json",
      "describeCommand": "cd {{sitePath}} && {{cliPath}} db columns {{table}} --format=json",
      "queryCommand": "cd {{sitePath}} && {{cliPath}} db query '{{query}}' --format={{format}}"
    },
    "defaultTablePrefix": "wp_",
    "prefixDetectionSuffixes": ["options", "posts", "users"],
    "protectedSuffixes": ["users", "usermeta"]
  },
  "cli": {
    "tool": "wp",
    "displayName": "WP-CLI",
    "commandTemplate": "cd {{sitePath}} && {{cliPath}} --url={{domain}} {{args}}",
    "defaultCliPath": "wp"
  },
  "discovery": {
    "findCommand": "find /home /var/www /srv -maxdepth 6 -name 'wp-config.php' -type f 2>/dev/null | head -20",
    "basePathTransform": "dirname",
    "displayNameCommand": "cd {{basePath}} && wp option get blogname 2>/dev/null || basename {{basePath}}"
  },
  "commands": ["wp"]
}
