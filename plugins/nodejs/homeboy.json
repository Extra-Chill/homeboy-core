{
  "id": "nodejs",
  "name": "Node.js",
  "version": "0.1.0",
  "icon": "n.square",
  "description": "Node.js platform support with PM2 integration",
  "author": "Homeboy",
  "defaultPinnedFiles": ["package.json", ".env"],
  "defaultPinnedLogs": ["logs/app.log"],
  "cli": {
    "tool": "pm2",
    "displayName": "PM2",
    "commandTemplate": "cd {{sitePath}} && pm2 {{args}}",
    "defaultCliPath": "pm2"
  },
  "discovery": {
    "findCommand": "find /home /var/www /srv -maxdepth 6 -name 'package.json' -type f 2>/dev/null | head -20",
    "basePathTransform": "dirname"
  },
  "commands": ["pm2"]
}
